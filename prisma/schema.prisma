generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                     String                @id @default(uuid())
  name                   String?
  email                  String?               @unique
  emailVerified          DateTime?
  image                  String?
  role                   String                @default("CANDIDATE")
  createdAt              DateTime              @default(now())
  companyId              String?
  bio                    String?
  headline               String?
  skills                 String?
  github                 String?
  linkedin               String?
  location               String?
  password               String?
  portfolio              String?
  username               String?               @unique
  bannerUrl              String?
  customLinks            String?
  resumeUrl              String?
  ghostMode              Boolean               @default(false)
  nodeType               String                @default("OPEN") // OPEN, BROADCAST
  emailNotifications     Boolean               @default(true)
  marketingEmails        Boolean               @default(false)
  credits                Int                   @default(10)
  plan                   String                @default("BASIC") // BASIC, PRO, ULTRA
  savedJobs              SavedJob[]
  jobAlerts              JobAlert[]
  accounts               Account[]
  applications           Application[]
  comments               Comment[]
  commentVotes           CommentVote[]
  education              Education[]
  experience             Experience[]
  jobs                   Job[]                 @relation("RecruiterJobs")
  likes                  Like[]
  notifications          Notification[]
  triggeredNotifications Notification[]        @relation("NotificationActor")
  pollVotes              PollVote[]
  posts                  Post[]
  profileViews           ProfileView[]         @relation("ProfileViews")
  viewedProfiles         ProfileView[]         @relation("ViewedProfiles")
  projects               Project[]
  reportsReceived        Report[]              @relation("ReportedUser")
  reportsFiled           Report[]              @relation("Reporter")
  sessions               Session[]
  company                Company?              @relation(fields: [companyId], references: [id])
  verificationRequests   VerificationRequest[]
  followers              Follow[]              @relation("following")
  following              Follow[]              @relation("follower")

  sentConnections     Connection[] @relation("SentConnections")
  receivedConnections Connection[] @relation("ReceivedConnections")

  // Messaging
  conversations ConversationParticipant[]
  messagesSent  Message[]
  interviews    Interview[]
  assessments   UserAssessment[]
  transactions  Transaction[]
}

model Interview {
  id         String   @id @default(uuid())
  userId     String
  role       String
  difficulty Int
  score      Int // 0-100
  feedback   String?  @db.Text
  radarData  Json? // Stores { technical: number, communication: number, ... }
  transcript Json? // Stores full chat history
  isPublic   Boolean  @default(true)
  createdAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Conversation {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  participants ConversationParticipant[]
  messages     Message[]
}

model ConversationParticipant {
  id             String   @id @default(uuid())
  userId         String
  conversationId String
  hasUnread      Boolean  @default(false)
  lastReadAt     DateTime @default(now())

  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@unique([userId, conversationId])
}

model Message {
  id             String   @id @default(uuid())
  content        String? // Made optional because a message could be just an attachment
  attachmentUrl  String?
  attachmentType String? // 'image', 'file', etc.
  senderId       String
  conversationId String
  createdAt      DateTime @default(now())

  sender       User         @relation(fields: [senderId], references: [id], onDelete: Cascade)
  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
}

model Connection {
  id          String   @id @default(uuid())
  requesterId String
  addresseeId String
  status      String   @default("PENDING") // PENDING, ACCEPTED
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  requester User @relation("SentConnections", fields: [requesterId], references: [id], onDelete: Cascade)
  addressee User @relation("ReceivedConnections", fields: [addresseeId], references: [id], onDelete: Cascade)

  @@unique([requesterId, addresseeId])
  @@index([addresseeId, status])
  @@index([requesterId, status])
}

model Follow {
  followerId  String
  followingId String
  createdAt   DateTime @default(now())

  follower  User @relation("follower", fields: [followerId], references: [id], onDelete: Cascade)
  following User @relation("following", fields: [followingId], references: [id], onDelete: Cascade)

  @@id([followerId, followingId])
}

model Project {
  id          String   @id @default(uuid())
  title       String
  description String?
  link        String?
  imageUrl    String?
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Experience {
  id          String   @id @default(uuid())
  userId      String
  position    String
  company     String
  startDate   String
  endDate     String?
  description String?
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Education {
  id           String   @id @default(uuid())
  userId       String
  school       String
  degree       String
  fieldOfStudy String?
  startDate    String?
  endDate      String?
  description  String?
  createdAt    DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model VerificationRequest {
  id          String    @id @default(uuid())
  userId      String
  type        String    @default("IDENTITY")
  documentUrl String
  status      String    @default("PENDING")
  feedback    String?
  reviewedBy  String?
  reviewedAt  DateTime?
  createdAt   DateTime  @default(now())
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Report {
  id             String   @id @default(uuid())
  reporterId     String
  reportedUserId String?
  targetType     String
  targetId       String?
  reason         String
  status         String   @default("PENDING")
  adminNotes     String?
  resolvedBy     String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  category       String   @default("OTHER")
  severity       String   @default("LOW")
  reportedUser   User?    @relation("ReportedUser", fields: [reportedUserId], references: [id], onDelete: SetNull)
  reporter       User     @relation("Reporter", fields: [reporterId], references: [id], onDelete: Cascade)
}

model Notification {
  id           String  @id @default(uuid())
  userId       String
  type         String
  message      String
  resourcePath String?
  read         Boolean @default(false)

  actorId  String?
  entityId String?

  createdAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  actor User? @relation("NotificationActor", fields: [actorId], references: [id], onDelete: Cascade)
}

model Post {
  id          String    @id @default(uuid())
  content     String
  image       String?
  codeSnippet String?
  tags        String?
  userId      String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  type        String    @default("TEXT")
  comments    Comment[]
  likes       Like[]
  poll        Poll?
  author      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Like {
  id        String   @id @default(uuid())
  postId    String
  userId    String
  createdAt DateTime @default(now())
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([postId, userId])
}

model Comment {
  id        String        @id @default(uuid())
  content   String
  postId    String
  userId    String
  createdAt DateTime      @default(now())
  parentId  String?
  parent    Comment?      @relation("CommentToComment", fields: [parentId], references: [id])
  replies   Comment[]     @relation("CommentToComment")
  post      Post          @relation(fields: [postId], references: [id], onDelete: Cascade)
  author    User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  votes     CommentVote[]
}

model CommentVote {
  id        String   @id @default(uuid())
  type      VoteType
  commentId String
  userId    String
  createdAt DateTime @default(now())
  comment   Comment  @relation(fields: [commentId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, commentId])
}

model Poll {
  id        String       @id @default(uuid())
  postId    String       @unique
  question  String
  createdAt DateTime     @default(now())
  post      Post         @relation(fields: [postId], references: [id], onDelete: Cascade)
  options   PollOption[]
  pollVotes PollVote[]
}

model PollOption {
  id          String     @id @default(uuid())
  text        String
  votes       Int        @default(0)
  pollId      String
  poll        Poll       @relation(fields: [pollId], references: [id], onDelete: Cascade)
  votesRecord PollVote[]
}

model PollVote {
  id        String     @id @default(uuid())
  pollId    String
  optionId  String
  userId    String
  createdAt DateTime   @default(now())
  option    PollOption @relation(fields: [optionId], references: [id], onDelete: Cascade)
  poll      Poll       @relation(fields: [pollId], references: [id], onDelete: Cascade)
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([pollId, userId])
}

model ProfileView {
  id        String   @id @default(uuid())
  viewerId  String
  profileId String
  viewedAt  DateTime @default(now())
  profile   User     @relation("ProfileViews", fields: [profileId], references: [id], onDelete: Cascade)
  viewer    User     @relation("ViewedProfiles", fields: [viewerId], references: [id], onDelete: Cascade)

  @@index([profileId, viewedAt])
  @@index([viewerId, profileId])
}

model Company {
  id          String   @id @default(uuid())
  name        String
  logo        String?
  website     String?
  description String?
  createdAt   DateTime @default(now())
  jobs        Job[]
  recruiters  User[]
}

model Job {
  id              String        @id @default(uuid())
  title           String
  location        String
  type            String        @default("Full-time") // Full-time, Contract, etc.
  workplaceType   String        @default("On-site") // On-site, Hybrid, Remote
  experienceLevel String        @default("Mid-Level") // Entry, Senior, Director
  salaryMin       Int?
  salaryMax       Int?
  currency        String        @default("USD")
  description     String
  skills          String // Stored as comma-separated or JSON
  applyMethod     String        @default("easy")
  externalUrl     String?
  questions       Json? // Screening questions
  userId          String
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @default(now()) @updatedAt
  status          String        @default("OPEN") // OPEN, CLOSED, DRAFT
  companyId       String
  applications    Application[]
  savedBy         SavedJob[]
  company         Company       @relation(fields: [companyId], references: [id], onDelete: Cascade)
  recruiter       User          @relation("RecruiterJobs", fields: [userId], references: [id], onDelete: Cascade)
}

model Dictionary {
  id String @id @default(uuid())
  // Placeholder for global skills/locations if needed
}

model Application {
  id         String   @id @default(uuid())
  jobId      String
  userId     String
  status     String   @default("PENDING") // PENDING, REVIEWED, SHORTLISTED, REJECTED, HIRED
  matchScore Int?
  resumeUrl  String?
  answers    Json? // Answers to screening questions
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt
  job        Job      @relation(fields: [jobId], references: [id], onDelete: Cascade)
  applicant  User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([jobId, userId]) // Prevent double applying
}

model SavedJob {
  id      String   @id @default(uuid())
  userId  String
  jobId   String
  savedAt DateTime @default(now())
  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  job     Job      @relation(fields: [jobId], references: [id], onDelete: Cascade)

  @@unique([userId, jobId])
}

model JobAlert {
  id        String   @id @default(uuid())
  userId    String
  title     String // e.g. "Remote React Jobs"
  criteria  Json // Filters: { role: "Engineer", remote: true, minSalary: 100000 }
  frequency String   @default("DAILY") // DAILY, WEEKLY
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum VoteType {
  UP
  DOWN
}

model Assessment {
  id              String           @id @default(uuid())
  title           String
  description     String
  category        String
  icon            String?
  questions       Question[]
  userAssessments UserAssessment[]
}

model Question {
  id           String     @id @default(uuid())
  text         String
  options      Json // Array of strings
  correctIndex Int
  assessmentId String
  assessment   Assessment @relation(fields: [assessmentId], references: [id], onDelete: Cascade)
}

model UserAssessment {
  id           String     @id @default(uuid())
  userId       String
  assessmentId String
  score        Int
  status       String // "PASSED" | "FAILED"
  attemptedAt  DateTime   @default(now())
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  assessment   Assessment @relation(fields: [assessmentId], references: [id], onDelete: Cascade)
}

model Transaction {
  id        String   @id @default(uuid())
  userId    String
  amount    Int // in cents
  credits   Int
  currency  String   @default("USD")
  status    String // PENDING, COMPLETED, REJECTED
  provider  String   @default("PAYONEER")
  type      String   @default("CREDITS") // CREDITS, PLAN
  planName  String? // PRO, ULTRA
  refId     String? // Payoneer Transaction ID from user
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
